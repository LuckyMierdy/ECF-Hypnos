        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <header>
        <div class="d-flex justify-content-between align-items-center">
          <div class="align-self-stretch"></div>
          <img src="{{ asset('img/Logo Hypnos.PNG') }}" alt="">
