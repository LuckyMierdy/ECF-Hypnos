{% extends 'base.html.twig' %}

{% block title %}Room
{% endblock %}

{% block body %}
	<div>
		<div class='d-flex flex-column flex-lg-row align-items-center p-5'>
			<div>
				<img src="{{asset('uploads/' ~ hotel.hotelImage) }}"/>
			</div>
			<div class='d-flex flex-column justify-content-center align-items-center'>
				<h1>{{ hotel.name }}</h1>
				<p class='text-center p-5'>{{ hotel.description }}</p>
			</div>
		</div>
		<div class='d-flex flex-column flex-xxl-row justify-content-around align-items-center'>
			{% for room in rooms %}
				{% if room.managername == hotel.managername %}
					<div class="card m-3" style="width: 18rem;">
						<img src="{{asset('uploads/' ~ room.roomImage) }}" class="card-img-top p-3" alt="...">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ room.name }}</h5>
							<p class="card-text">{{ room.description }}</p>
							<a href="" class="button">Réserver</a>
						</div>
					</div>
				{% endif %}
			{% else %}
				<tr>
					<td colspan="6">Aucun établissement trouvé</td>
				</tr>
			{% endfor %}
		</div>
	</div>
{% endblock %}
